{
  "$id": "https://kki.example.com/schema/fields/user_reference.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User Reference",
  "type": "object",
  "required": ["id", "display_name"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "$ref": "./identifier.json"
    },
    "display_name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128
    },
    "email": {
      "type": "string",
      "format": "email"
    }
  }
}

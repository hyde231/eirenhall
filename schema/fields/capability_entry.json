{
  "metadata": {
    "id": "std.capability.entry",
    "name": "Capability Entry",
    "description": "Capability definition entry describing enablement, version, and config.",
    "fieldType": "composite",
    "dataType": "object",
    "version": "1.0.0",
    "owner": "core.platform",
    "capabilities": ["viewable", "manage"],
    "sensitivity": "internal",
    "constraints": {
      "required": ["enabled", "version"]
    },
    "localization": {
      "translatable": false
    },
    "example": {
      "enabled": true,
      "version": "1.1.0",
      "config": null
    },
    "provenance": {}
  },
  "$id": "https://eirenhall.com/schema/fields/capability_entry.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Capability Entry",
  "type": "object",
  "required": ["enabled", "version"],
  "additionalProperties": true,
  "properties": {
    "enabled": {
      "type": "boolean"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(?:-[0-9A-Za-z.-]+)?$"
    },
    "config": {
      "type": ["object", "null"],
      "description": "Capability specific configuration payload."
    }
  }
}

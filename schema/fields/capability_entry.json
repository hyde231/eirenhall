{
  "$id": "https://kki.example.com/schema/fields/capability_entry.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Capability Entry",
  "type": "object",
  "required": ["enabled", "version"],
  "additionalProperties": true,
  "properties": {
    "enabled": {
      "type": "boolean"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+(?:-[0-9A-Za-z.-]+)?$"
    },
    "config": {
      "type": ["object", "null"],
      "description": "Capability specific configuration payload."
    }
  }
}

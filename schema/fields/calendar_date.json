{
  "$id": "https://kki.example.com/schema/fields/calendar_date.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Calendar Date",
  "type": "string",
  "format": "date",
  "pattern": "^[0-9]{4}-(0[1-9]|1[0-2])-(0[1-9]|[12][0-9]|3[01])$",
  "description": "Calendar date in ISO 8601 format (YYYY-MM-DD)."
}

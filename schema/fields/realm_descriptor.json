{
  "metadata": {
    "id": "std.realm.descriptor",
    "name": "Realm Descriptor",
    "description": "Realm identifier, hierarchy path, and optional sensitivity floor.",
    "fieldType": "composite",
    "dataType": "object",
    "version": "1.0.0",
    "owner": "core.platform",
    "capabilities": ["viewable", "manage"],
    "sensitivity": "internal",
    "constraints": {
      "required": ["id", "path"]
    },
    "localization": {
      "translatable": false
    },
    "example": {
      "id": "eng-data",
      "path": ["global", "engineering", "eng-data"],
      "sensitivity_floor": "internal"
    },
    "provenance": {}
  },
  "$id": "https://kki.example.com/schema/fields/realm_descriptor.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Realm Descriptor",
  "type": "object",
  "required": ["id", "path"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "minLength": 3,
      "maxLength": 128,
      "pattern": "^[a-z0-9-]+$"
    },
    "path": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      }
    },
    "sensitivity_floor": {
      "type": "string",
      "enum": ["public", "internal", "confidential", "secret"]
    }
  }
}

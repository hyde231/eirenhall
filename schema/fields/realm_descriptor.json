{
  "$id": "https://kki.example.com/schema/fields/realm_descriptor.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Realm Descriptor",
  "type": "object",
  "required": ["id", "path"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "minLength": 3,
      "maxLength": 128,
      "pattern": "^[a-z0-9-]+$"
    },
    "path": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      }
    },
    "sensitivity_floor": {
      "type": "string",
      "enum": ["public", "internal", "confidential", "secret"]
    }
  }
}
